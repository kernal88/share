export PS1='\h:\w\$ '
umask 022 
# You may uncomment the following lines if you want `ls' to be colorized:
# export LS_OPTIONS='--color=auto'
# eval "`dircolors`"
# alias ls='ls $LS_OPTIONS'
# alias ll='ls $LS_OPTIONS -l'
# alias l='ls $LS_OPTIONS -lA'
#
# Some more alias to avoid making mistakes:
# alias rm='rm -i'
# alias cp='cp -i'
# alias mv='mv -i'
alias ll='ls -hil --color=auto'
alias grep='grep --color'
alias hard="watch -d -n 1 'cat /proc/interrupts'"
alias soft="watch -d -n 1 'cat /proc/softirqs'"
alias brctl-delif='brctl delif wafbridge1 eth0 eth1'
set-int()
{
	echo $1 > /proc/irq/$2/smp_affinity
	echo "echo $1 > /proc/irq/$2/smp_affinity"
	echo $1 > /proc/irq/$3/smp_affinity
	echo "echo $1 > /proc/irq/$3/smp_affinity"
}
PATH=$PATH:/var/waf
